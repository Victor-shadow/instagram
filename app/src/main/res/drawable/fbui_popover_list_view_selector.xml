<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_first="true"
        android:state_last="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fbui_popover_list_view_selector" />
            <corners
                android:radius="@dimen/audience_lists_text_in_badge_horizontal_margin_right" />
        </shape>
    </item>
    <item
        android:state_first="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fbui_popover_list_view_selector" />
            <corners
                android:topLeftRadius="@dimen/audience_lists_text_in_badge_horizontal_margin_right"
                android:topRightRadius="@dimen/audience_lists_text_in_badge_horizontal_margin_right" />
        </shape>
    </item>
    <item
        android:state_last="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fbui_popover_list_view_selector" />
            <corners
                android:bottomLeftRadius="@dimen/audience_lists_text_in_badge_horizontal_margin_right"
                android:bottomRightRadius="@dimen/audience_lists_text_in_badge_horizontal_margin_right" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fbui_popover_list_view_selector" />
        </shape>
    </item>
</selector>