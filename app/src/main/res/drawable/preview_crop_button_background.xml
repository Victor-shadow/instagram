<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?igds_color_preview_crop_button_pressed" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?igds_color_preview_crop_button_pressed" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="?igds_color_preview_crop_button_default" />
            <corners
                android:radius="8.0dip" />
        </shape>
    </item>
</selector>