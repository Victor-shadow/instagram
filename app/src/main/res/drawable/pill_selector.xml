<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/igds_color_secondary_button_selected_pressed_panavision" />
            <corners
                android:radius="25.0dip" />
        </shape>
    </item>
    <item
        android:state_selected="true"
        android:drawable="@drawable/secondary_button_selected_panavision_soft_update">
        <shape>
            <solid
                android:color="@color/igds_color_secondary_button_selected_panavision" />
            <corners
                android:radius="25.0dip" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="?igds_color_secondary_button_pressed_panavision" />
            <corners
                android:radius="25.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="?igds_color_elevated_highlight_background" />
            <corners
                android:radius="25.0dip" />
        </shape>
    </item>
</selector>