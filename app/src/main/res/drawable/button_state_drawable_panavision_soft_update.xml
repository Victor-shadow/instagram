<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        android:drawable="@drawable/primary_button_selector_panavision_soft_update"
        app:state_blue="true" />
    <item
        android:drawable="@drawable/secondary_button_selector_panavision_soft_update"
        app:state_grey="true" />
    <item
        android:state_selected="true"
        android:drawable="@color/solid_white"
        app:state_white="true" />
    <item
        android:state_selected="false"
        app:state_white="true">
        <shape>
            <solid
                android:color="#ffd3d6cc" />
        </shape>
    </item>
    <item
        android:drawable="@color/solid_white"
        app:state_blue="false"
        app:state_grey="false" />
</selector>