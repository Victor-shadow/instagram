<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="ring"
            android:thicknessRatio="2.0"
            android:useLevel="false"
            android:innerRadius="0.0dip">
            <gradient
                android:startColor="@color/igds_color_hover_row_background_gradient_start"
                android:endColor="@color/igds_color_hover_row_background_gradient_end"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:state_hovered="true">
        <shape
            android:shape="ring"
            android:thicknessRatio="2.0"
            android:useLevel="false"
            android:innerRadius="0.0dip">
            <gradient
                android:startColor="@color/igds_color_hover_row_background_gradient_start"
                android:endColor="@color/igds_color_hover_row_background_gradient_end"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/igds_color_primary_background" />
        </shape>
    </item>
</selector>