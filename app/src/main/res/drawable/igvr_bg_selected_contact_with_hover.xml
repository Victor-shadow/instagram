<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="@dimen/ab_test_media_thumbnail_preview_item_internal_padding" />
            <gradient
                android:startColor="@color/igds_color_hover_pog_background_gradient_start"
                android:endColor="@color/igds_color_hover_pog_background_gradient_end"
                android:angle="0.0"
                android:type="radial"
                android:centerX="0.0"
                android:centerY="0.0"
                android:gradientRadius="100.0%p" />
        </shape>
    </item>
    <item
        android:state_hovered="true">
        <shape>
            <corners
                android:radius="@dimen/ab_test_media_thumbnail_preview_item_internal_padding" />
            <gradient
                android:startColor="@color/igds_color_hover_pog_background_gradient_start"
                android:endColor="@color/igds_color_hover_pog_background_gradient_end"
                android:angle="0.0"
                android:type="radial"
                android:centerX="0.0"
                android:centerY="0.0"
                android:gradientRadius="100.0%p" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/igds_color_primary_background" />
        </shape>
    </item>
</selector>