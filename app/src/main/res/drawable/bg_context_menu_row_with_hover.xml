<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/igds_color_hover_menu_row_background_gradient_start"
                android:endColor="@color/igds_color_hover_menu_row_background_gradient_end"
                android:angle="0.0"
                android:type="radial"
                android:centerX="0.0"
                android:centerY="0.0"
                android:gradientRadius="700.0%p" />
        </shape>
    </item>
    <item
        android:state_selected="true">
        <shape>
            <gradient
                android:startColor="@color/igds_color_hover_menu_row_background_gradient_start"
                android:endColor="@color/igds_color_hover_menu_row_background_gradient_end"
                android:angle="0.0"
                android:type="radial"
                android:centerX="0.0"
                android:centerY="0.0"
                android:gradientRadius="700.0%p" />
        </shape>
    </item>
    <item
        android:state_hovered="true">
        <shape>
            <gradient
                android:startColor="?igds_color_hover_menu_row_background_gradient_start"
                android:endColor="?igds_color_hover_menu_row_background_gradient_end"
                android:angle="0.0"
                android:type="radial"
                android:centerX="0.0"
                android:centerY="0.0"
                android:gradientRadius="700.0%p" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="?igds_context_menu_row_background_color" />
        </shape>
    </item>
</selector>