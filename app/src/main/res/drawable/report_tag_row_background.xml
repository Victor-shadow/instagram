<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="@dimen/account_discovery_bottom_gap" />
            <gradient
                android:startColor="@color/white_25_transparent"
                android:endColor="@color/cds_white_a02"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:state_hovered="true">
        <shape>
            <corners
                android:radius="@dimen/account_discovery_bottom_gap" />
            <gradient
                android:startColor="@color/cds_white_a08"
                android:endColor="@color/cds_transparent"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="@dimen/account_discovery_bottom_gap" />
            <solid
                android:color="#63505050" />
        </shape>
    </item>
</selector>