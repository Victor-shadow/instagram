<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/transparent"
                android:endColor="@color/black_10"
                android:angle="180.0"
                android:centerX="0.98"
                android:centerColor="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/transparent"
                android:endColor="@color/black_10"
                android:angle="360.0"
                android:centerX="0.98"
                android:centerColor="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/black_10"
                android:endColor="@color/transparent"
                android:angle="270.0"
                android:centerY="0.02"
                android:centerColor="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/black_10"
                android:endColor="@color/transparent"
                android:angle="90.0"
                android:centerY="0.02"
                android:centerColor="@color/transparent" />
        </shape>
    </item>
</layer-list>