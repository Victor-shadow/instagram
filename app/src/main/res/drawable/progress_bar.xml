<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="4.0dip" />
            <solid
                android:color="?igds_color_elevated_background" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <gradient
                    android:startColor="@color/igds_prism_purple_05"
                    android:endColor="@color/igds_prism_orange_05"
                    android:angle="0.0"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>