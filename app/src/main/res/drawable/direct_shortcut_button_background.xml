<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <layer-list>
            <item
                android:id="@id/shortcut_selected_state">
                <shape
                    android:shape="rectangle">
                    <size
                        android:height="@dimen/abc_star_medium"
                        android:width="@dimen/abc_star_medium" />
                    <solid
                        android:color="@color/igds_color_primary_button" />
                    <stroke
                        android:width="1.0px"
                        android:color="@color/igds_color_elevated_highlight_background" />
                    <corners
                        android:radius="50.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:id="@id/shortcut_unselected_state">
                <shape
                    android:shape="rectangle">
                    <size
                        android:height="@dimen/abc_star_medium"
                        android:width="@dimen/abc_star_medium" />
                    <solid
                        android:color="@color/igds_color_elevated_highlight_background" />
                    <stroke
                        android:width="1.0px"
                        android:color="@color/igds_color_elevated_highlight_background" />
                    <corners
                        android:radius="50.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>