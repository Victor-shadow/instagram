<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/igds_color_dynamic_hover_row_background_gradient_start"
                android:endColor="@color/igds_color_active_row_background_gradient_end"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:state_selected="true">
        <shape>
            <gradient
                android:startColor="@color/igds_color_active_row_background_gradient_start"
                android:endColor="@color/igds_color_active_row_background_gradient_end"
                android:angle="0.0"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="?igds_color_primary_background" />
        </shape>
    </item>
</selector>