<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid
                android:color="@color/transparent" />
            <size
                android:height="24.0dip"
                android:width="24.0dip" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <shape
            android:shape="ring"
            android:useLevel="true"
            android:innerRadius="10.0dip"
            android:thickness="1.75dip">
            <solid
                android:color="@color/solid_white" />
            <size
                android:height="24.0dip"
                android:width="24.0dip" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="0.0"
            android:toDegrees="360.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%">
            <shape
                android:shape="ring"
                android:useLevel="false"
                android:innerRadius="10.0dip"
                android:thickness="1.75dip">
                <gradient
                    android:startColor="@color/transparent"
                    android:endColor="@color/solid_white"
                    android:useLevel="false"
                    android:angle="0.0"
                    android:type="sweep"
                    android:centerX="0.5"
                    android:centerY="0.5" />
                <size
                    android:height="24.0dip"
                    android:width="24.0dip" />
            </shape>
        </rotate>
    </item>
</layer-list>