<?xml version="1.0" encoding="utf-8"?>
<selector
    android:variablePadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/fbui_border_dark" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_border_dark" />
            <size
                android:height="@dimen/abc_dropdownitem_icon_width"
                android:width="@dimen/abc_dropdownitem_icon_width" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/abc_decor_view_status_guard_light" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_bg_dark" />
            <size
                android:height="@dimen/abc_dropdownitem_icon_width"
                android:width="@dimen/abc_dropdownitem_icon_width" />
        </shape>
    </item>
</selector>