<?xml version="1.0" encoding="utf-8"?>
<selector
    android:variablePadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/fbui_btn_dark_special_bg_pressed" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_btn_dark_special_bg_pressed" />
            <size
                android:height="@dimen/abc_alert_dialog_button_dimen"
                android:width="@dimen/abc_alert_dialog_button_dimen" />
        </shape>
    </item>
    <item
        android:state_enabled="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/fbui_btn_dark_primary_stroke_enabled" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_btn_dark_primary_stroke_enabled" />
            <size
                android:height="@dimen/abc_alert_dialog_button_dimen"
                android:width="@dimen/abc_alert_dialog_button_dimen" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/fbui_accent_blue_20" />
            <size
                android:height="@dimen/abc_alert_dialog_button_dimen"
                android:width="@dimen/abc_alert_dialog_button_dimen" />
        </shape>
    </item>
</selector>