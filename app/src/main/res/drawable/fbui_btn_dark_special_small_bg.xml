<?xml version="1.0" encoding="utf-8"?>
<selector
    android:variablePadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fbui_btn_dark_special_bg_pressed" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_btn_dark_special_bg_pressed" />
            <corners
                android:radius="@dimen/abc_action_bar_elevation_material" />
            <padding
                android:left="@dimen/account_discovery_bottom_gap"
                android:top="@dimen/abc_edit_text_inset_top_material"
                android:right="@dimen/account_discovery_bottom_gap"
                android:bottom="@dimen/abc_edit_text_inset_top_material" />
        </shape>
    </item>
    <item
        android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/fbui_btn_dark_primary_stroke_enabled" />
            <stroke
                android:width="1.0dip"
                android:color="@color/fbui_btn_dark_primary_stroke_enabled" />
            <corners
                android:radius="@dimen/abc_action_bar_elevation_material" />
            <padding
                android:left="@dimen/account_discovery_bottom_gap"
                android:top="@dimen/abc_edit_text_inset_top_material"
                android:right="@dimen/account_discovery_bottom_gap"
                android:bottom="@dimen/abc_edit_text_inset_top_material" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/fbui_accent_blue_20" />
            <corners
                android:radius="@dimen/abc_action_bar_elevation_material" />
            <padding
                android:left="@dimen/account_discovery_bottom_gap"
                android:top="@dimen/abc_edit_text_inset_top_material"
                android:right="@dimen/account_discovery_bottom_gap"
                android:bottom="@dimen/abc_edit_text_inset_top_material" />
        </shape>
    </item>
</selector>