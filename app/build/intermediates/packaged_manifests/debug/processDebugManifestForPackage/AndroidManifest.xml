    <!-- Allows the app to create network sockets and use customized network protocols. The browser and other applications provide means to send data to the internet, so this permission is not required to send data to the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Allows the app to view information about network connections such as which networks exist and are connected -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allows the app to prevent the phone from going to sleep -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!-- Allows the app to get a list of accounts known by the phone.This may include accounts created by applications you have installed -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- Allows the app to get itself started as soon as the system finishes booting. This can make it take longer to start the phone and allow the app to slow down the overall device by always running -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Allows the app to control the vibrator -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Allows the app to make use of foreground services -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Allows the app to display notifications as full screen activities on a locked device -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- Allows the app to accept cloud-to-device messages sent by the app's service. Using this service will incur data usage. malicious apps could cause excess data usage -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Allows the app to view the configuration of bluetooth on the phone and to make and accept connection with paired devices -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <!-- The app can take pictures and record videos using the camera while the app is in use -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Allows the app to read data about your contacts stored on the phone. Apps will also have access to account's on your phone that have created contacts. This may include any accounts created by apps that you have installed.This permission allows any app to save your contacts data, and malicious apps may share contacts data without your knowledge -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!-- This permission allows the app to get the precise location according to Location Services while in use. Location services must be turned on in the device for the app to get the location. This may increase battery usage -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- This app can record the audio using the microphone while the app is in use -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Allows the app to modify global audio settings such as the volume and which speaker is used for output -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- Allows the app to read the contents of shared storage -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- Allows the app to read image files from your shared storage -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Allows the app to read video files from your shared storage -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <!-- Allows the app to read image and video files that you select from shared storage -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />
    <!-- Allows the app to read locations from media collection. -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <!-- Allows a publisher app to access a valid advertising ID directly or indirectly -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    <!-- Allows the app to access phone features of the device. This permission allows the app to determine the phone number and device IDS, whether a call is active and the remote number connected by a call. -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Allows the app to access phone numbers of the device -->
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <!-- Allows the app to read basic telephony features of the device -->
    <uses-permission android:name="android.permission.READ_BASIC_PHONE_STATE" />
    <!-- Allows the app to answer an incoming phone call -->
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    <!-- This app reads your phone call history -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <!-- Allows the app to add home screen shortcuts without user intervention -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <!-- Allows the app to remove home screen shortcuts without user intervention -->
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.socialmediaapplication.direct.permission.PROTECTED_DEEPLINKING" />
    <uses-permission android:name="com.socialmediaapplication.direct.permission.DIRECT_APP_THREAD_STORE_SERVICE" />
    <uses-permission android:name="com.facebook.services.identity.FEO2" />
    <uses-permission android:name="com.htc.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.htc.launcher.permission.UPDATE_SHORTCUT" />
    <uses-permission android:name="com.huawei.android.launcher.permission.CHANGE_BADGE" />
    <uses-permission android:name="com.sonyericsson.home.permission.BROADCAST_BADGE" />
    <uses-permission android:name="com.sonymobile.home.permission.PROVIDER_INSERT_BADGE" />
    <!-- Allow the app to configure local Bluetooth phone and t discover and pair with remote devices. -->
    <uses-permission-sdk-23 android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- Allows the app to connect and disconnect from Wi-Fi access points and make changes to device configuration for Wi-Fi networks. -->
    <uses-permission-sdk-23 android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- This app can add, remove or change calendar events on your phone. This app can send messages that may appear to come from the calendar owners or change events without notifying their owners. -->
    <uses-permission-sdk-23 android:name="android.permission.WRITE_CALENDAR" />
    <!-- Allows the app to make use of foreground services with the type 'dataSyc' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <!-- Allows the app t make use of foreground services with the type 'mediaPlayback' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="com.facebook.katana.provider.ACCESS" />
    <!-- Allows an application to access adServices Attribution APIs. -->
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_ATTRIBUTION" />
    <!-- Allows an application to access AdId API. -->
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_AD_ID" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.portrait"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x20000"
        android:required="true" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <!-- Allows the app to make use of foreground services with the type 'phoneCall' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <!-- Allows the app to make use of foreground services with the type 'microphone' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.RUN_USER_INITIATED_JOBS" />

    <permission
        android:name=".permission.RECEIVE_ADM_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.RECEIVE_ADM_MESSAGE" />
    <uses-permission android:name="android.permission.CREDENTIAL_MANAGER_SET_ALLOWED_PROVIDERS" />
    <!-- Allows the app to connect to paired Bluetooth devices -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- Allows the app to change the state of network connectivity -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- Allows the app to make use of Foreground services with the type 'mediaProjection' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.MEDIA_PROJECTION" />
    <!-- Allows the app to make use of foreground services with the type 'location' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <!-- Allows the app to make phone calls without user intervention -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- Allows the app to retrieve its installer referrer information -->
    <uses-permission android:name="com.google.android.finsky.permission.BIND_GET_INSTALL_REFERRER_SERVICE" />
    <!-- Allows the app to mak use of foreground services with the type 'camera' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="com.socialmediaapplication.CROSS_PROCESS_BROADCAST_MANAGER" />
    <!-- Allows the app to make use of foreground services with the type 'connectedDevices' -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <!-- Allows the app to use biometric hardware for authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <!-- Allows the app to route its call through the system in order to improve the calling experience -->
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    <!-- Allows the user to purchase items through Google play from within this app -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <permission
        android:name="com.socialmediaapplication.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.socialmediaapplication.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Base.Theme.SocialMediaApplication" >
        <activity
            android:name="com.socialmediaapplication.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.socialmediaapplication.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>